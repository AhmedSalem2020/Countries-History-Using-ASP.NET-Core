@page
@model CoreProject.Pages.Cities.IndexModel

@{
    ViewData["Title"] = "Index";
}

<link href="~/datatables/dataTables.bootstrap.css" rel="stylesheet" />
<h2>Index</h2>

@*<span asp-AhmedSalem text="Mohamed">Hello </span>*@

<p>
    <a asp-page="Create" class="btn btn-default" role="button">Create New</a>
</p>
<table  id="tb"class="table table-bordered table-hover table-striped table-responsive">
    <thead>
        <tr>
            <th>City Name</th>
            <th>Country Name</th>
            <th>City Image </th>
            <th>Operations</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model.Cities)
        {
            <tr>
                <td>@item.Name</td>

                <td>@item.Country.Name</td>

                <td> <img src="~/uploads/img/@item.Image" style="width:200px; height:100px" />  </td>

                <td>
                    <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-primary" role="button">Edit</a>
                    <a asp-page="Details" asp-route-id="@item.Id" class="btn btn-success" role="button">Details</a>
                    <a asp-page="Delete" asp-route-id="@item.Id" class="btn btn-danger" role="button">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section scripts
    {
    <script src="~/datatables/jquery.dataTables.js"></script>
    <script src="~/datatables/dataTables.bootstrap.js"></script>

    <script>
        $(function() {
            $('#tb').DataTable({
                "paging": true,
                "lengthChange": false,
                "searching": true,
                "ordering": true,
                "info": true,
                "autoWidth": true,
                "pagingType": "full_numbers",
                "pageLength": 4
            });
        });
    </script>

}
