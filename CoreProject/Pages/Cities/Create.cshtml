@page
@model CoreProject.Pages.Cities.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">

            <div class="form-group">
                <label asp-for="@Model.City.Name" class="control-label"></label>
                <input asp-for="@Model.City.Name" class="form-control" />
                <span asp-validation-for="@Model.City.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.City.CountryId" class="control-label"></label>
                <select asp-for="@Model.City.CountryId" class="form-control" asp-items="@Model.Countries"></select>
            </div>

            <div class="form-group">
                <p>Upload Image  </p>
                <input asp-for="@Model.City.Image" class="form-control" type="file" name="files" />
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{Html.RenderPartial("_ValidationScriptsPartial");}
}
